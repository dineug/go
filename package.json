{
  "name": "@dineug/go-monorepo",
  "packageManager": "yarn@3.2.2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=16.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dineug/go.git"
  },
  "bugs": {
    "url": "https://github.com/dineug/go/issues"
  },
  "homepage": "https://github.com/dineug/go#readme",
  "author": "SeungHwan-Lee <dineug2@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "test": "yarn workspaces foreach run test",
    "prepare": "husky install",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint \"**/*.{js,ts}\" --fix",
    "format:prettier": "prettier \"**/*.{html,js,json,md,ts}\" --write",
    "lint": "eslint \"**/*.{js,ts}\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/pluginutils": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "rollup": "^3.9.1",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "tslib": "^2.4.1",
    "ttypescript": "^1.5.15",
    "turbo": "^1.7.0",
    "typescript": "4.8.4",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^4.0.4",
    "vite-tsconfig-paths": "^4.0.3"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
